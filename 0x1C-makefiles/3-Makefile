# Makefile for 'school' executable
CC = gcc
CFLAGS = -Wall -Wextra -std=c99
SRC = main.c school
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
all: $(NAME)
$(NAME): $(OBJ)
	$(CC) $(CFLAGS) -o $@ $^
%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@
fclean: clean oclean
	$(RM) $(NAME)
oclean:
	$(RM) $(OBJ)
clean:
	$(RM) *~ \
re: fclean all
.PHONY
